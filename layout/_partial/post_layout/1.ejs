<% if(theme.post.toc.enable){ %>
<%     var offset_col_num = 1 %>
<% }else { var offset_col_num = 2 } %>
<div class="main main-raised">
    <div class="container">
        <div class="section">
            <div class="row">
                <div class="col-md-8 offset-md-<%- offset_col_num %>">
                    <div class="post_content">
                        <%- page.content %>
                    </div>
                    <br><br>
                    <div>
                        <p>
                            <% page.tags.each(function(tag) { %>     
                                <a class="badge badge-default" href="/archives/#<%- tag.name %>">#&nbsp;<%- tag.name %></a>
                                &nbsp;
                            <% }) %>    
                        </p>
                    </div>
                    <%- theme.issue %>
                </div>
                <!-- TOC -->
                <%- partial('../toc') %>
            </div>
        </div>
    </div>
</div>