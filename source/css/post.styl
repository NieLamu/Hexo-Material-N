// for tocbot
#toc {
    font-size: 16px;
}

#tocbot>ol {
  padding-left: 0;
}

.toc-title{
    font-size: 1.5rem;
    font-weight: 400;
}

#tocbot ol{
    list-style: none;
}

.tocbot-list ol{
    list-style: none;
    padding-left: 15px;
}

.tocbot-link{
    color: #34495e;
}

.tocbot-active-link {
    font-weight: 600;
    color: var(--GrColor);
}

.tocbot-is-collapsible {
    max-height: 1000px;
    overflow: hidden;
    transition: all 300ms ease-in-out;
}

.tocbot-is-collapsed {
    max-height: 0;
}

// toc下的按钮
.privateWidget a {
  display: table;
}

.comments {
    width: 80%;
    margin: 0 auto;
}

// 图片放大
#fullImgBackground {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: #d2d2d2;
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}
#fullImgBackground img {
  max-width: 90%;
  max-height: 90%;
  z-index: 999;
  border-radius: 5px;
  transition: all 0.6s;
}
#fullImgBackground img:hover{
  max-width: 100%;
  max-height: 100%;
}

