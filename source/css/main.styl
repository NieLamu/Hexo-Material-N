:root{
//   --bgColor: #56c2a4;
  --bgColor: #00bcd4;
  --hvColor: #1a94bc; // 钴蓝
}

// 选中背景色
::selection {
    background: var(--bgColor); 
    color: white;
}
::-moz-selection {
    background: var(--bgColor); 
    color: white;
}
::-webkit-selection {
    background: var(--bgColor); 
    color: white;
}

@media (max-width: 375px){
    .main-raised {
        margin-left: .0625rem;
        margin-right: .0625rem;
        margin-top: -15vh !important;
    }
    .post_title {
        font-size: 2rem;
    }
}

// 导航栏
.navbar {
	padding: 0;
	background-color: transparent !important;
	box-shadow: 0 0 0 0 ;
}
.navbar {
    transition: all .5s ease 0s;
}
.navbar:not(.navbar-transparent){
    color: var(--bgColor);
}
.navbar:hover:not(.navbar-transparent) {
    background-color: var(--bgColor) !important;
    color: white;
}
.navbar a {
    font-size: 1.3em !important;
}
.navbar ion-icon {
    font-size: 1.875rem;
}
.navbar:not(.navbar-transparent) a:not(.navbar-brand):hover:after {
    content: "";
    width: 100%;
    height: .3125rem;
    position: absolute;
    left: 0;
    bottom: 0rem;
    background-color: #ffffff;
}
.navbar .navbar-nav .nav-item .nav-link:not([rel]){
    padding-top: 1.25rem; 
    padding-bottom: 1.25rem; 
}
.navbar-brand {
    top: -0.9375rem;
}
.navbar-brand ion-icon {
    font-size: 3.75rem;
}
.navbar .navbar-toggler .navbar-toggler-icon {
    background-color: var(--bgColor);
}




// 主要布局

.main {
    z-index: 1;
}
.main-raised {
	box-shadow: 0 0 0 0 ;
    margin-top: -15vh;
}

.nav-link {
	box-shadow: 0 0 0 0 !important;
    text-transform: capitalize !important;
}


/* 链接 */
a {
    color: var(--bgColor);
    border-radius: .1875rem !important;
}
a:hover:not(.navbar-brand),
a:focus:not(.navbar-brand) {
    background-color: var(--bgColor) !important;
    color: white;
    text-decoration: none;
}

ion-icon {
    vertical-align: middle;
}

.btn {
	box-shadow: 0 0 0 0 ;
}
.btn:focus, .btn:active, .btn:hover, .btn.btn-default:focus, .btn.btn-default:active, .btn.btn-default:hover{
	box-shadow: 0 0 0 0 ;
    background-color: var(--bgColor);
    color: white !important;
}

/////////////////////////////////////////// index

.index-card{
    margin-top: 0rem;
    word-break: break-all;
}
.index-card {
    padding: 1.25rem 1rem;
    border-radius: .375rem;
}
.index-card:hover {
	box-shadow: 0rem 0rem 5rem var(--bgColor);
	transition: 0.3s;
}

.index-post-img{
    display:block; 
    width: 100%;
    height: 0;
    padding-top: 33%;
    background-position: center center;
    background-size:cover;
    border-radius: .375rem;
    box-shadow: 0rem 0rem 0rem;
}
// 首页文章头图
.post_index_image_container{
  width: 100%;
}



